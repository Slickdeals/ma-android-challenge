<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/deal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/deal_title_text_size"
            tools:text="Hamilton Men's Jazzmaster Automatic Chronograph Watch"
            android:textColor="@color/blue_sd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/deal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="2dp"
                android:textSize="@dimen/deal_price_text_size"
                android:textStyle="bold"
                android:ellipsize="end"
                tools:text="$729"
                android:layout_gravity="bottom"
                android:textColor="@color/green_sd" />
            <TextView
                android:id="@+id/deal_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="2dp"
                android:paddingEnd="1dp"
                android:textSize="@dimen/deal_extra_text_size"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                tools:text="+ Free Shipping"
                android:textColor="@android:color/darker_gray"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_deal_cell"
                android:paddingRight="2dp"
                android:paddingBottom="2dp" />
            <TextView
                android:id="@+id/deal_score"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="@dimen/deal_score_text_size"
                tools:text="22"
                android:textColor="@android:color/darker_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_weight="1"
                android:textSize="@dimen/deal_score_text_size"
                android:text="|"
                android:textColor="@android:color/darker_gray" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingTop="4dp"
                android:src="@drawable/ic_comments_deal_cell"/>
            <TextView
                android:id="@+id/deal_num_replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_weight="1"
                android:textSize="@dimen/deal_score_text_size"
                tools:text="10"
                android:textColor="@android:color/darker_gray"
                android:elegantTextHeight="false" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>